<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/View_pager"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="220dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card01"

        android:layout_below="@id/View_pager"
        android:layout_marginTop="10dp"
       android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"



            >

            <TextView
                android:id="@+id/text_view_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_gravity="center"

                android:textSize="60sp" />

            <TextView
                android:layout_below="@+id/text_view_1"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Infected"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/text_view_2"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        android:layout_below="@id/card01"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
       >

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/colorOrange"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/text_view_3">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="Active"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@id/card01"
        android:layout_toRightOf="@id/card1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="28dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#50880E"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/text_view_4">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Recoverd"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>











    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        android:layout_below="@id/card1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        >

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
            android:textColor="#7E794D"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/text_view_5">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:textColor="@color/colorYEllow"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"

                android:text="Deceased"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car4"
        android:layout_below="@id/card2"
        android:layout_toRightOf="@id/card1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="10dp"
          >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:textColor="#F16E9A"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/text_view_7">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
android:textColor="#E91E63"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/text_view_6"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/colorbLUE"
                android:text="Last update"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>








</RelativeLayout>






